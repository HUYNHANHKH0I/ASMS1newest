<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.AdminHomeActivity"
    android:background="@color/biege"
    android:orientation="vertical">
    <TextView
        android:id="@+id/txtWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:layout_gravity="right"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginRight="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logout_string"
        android:clickable="true"
        android:layout_gravity="right"
        android:textSize="20dp"
        android:onClick="clickToLogout"
        android:textColor="@color/black"
        android:layout_marginRight="15dp"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/adduserlogo"
        android:layout_gravity="center"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp"
        android:onClick="clickToCreateAccount"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"/>

    <View
        android:id="@+id/divider"
        android:layout_width="370dp"
        android:layout_marginVertical="50dp"
        android:layout_gravity="center"
        android:layout_height="6dp"
        android:background="@color/black" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/manageuserlogo"
        android:layout_gravity="center"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp"
        android:onClick="clickToManageAccount"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Account"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:layout_gravity="center"/>

</LinearLayout>